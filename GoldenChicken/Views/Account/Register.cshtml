@model GoldenChicken.Models.RegisterViewModel
@{
    ViewBag.Title = "ثبت نام";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 class="text-center">ایجاد حساب</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2 float-right" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control m-auto" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Username, new { @class = "control-label col-md-2 float-right" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Username, new { @class = "form-control m-auto" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2 float-right" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control m-auto" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-2 float-right" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control m-auto" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="ثبت نام" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
